<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="1" author="ulan">

    </changeSet>

    <changeSet id="2" author="ulan">
        <createTable tableName="users" schemaName="habit_tracker_schema">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="3" author="ulan">
        <createTable tableName="habit" schemaName="habit_tracker_schema">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
            <column name="frequency" type="VARCHAR(255)"/>
            <column name="created_date" type="DATE"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="habit" baseColumnNames="user_id"
                referencedTableName="users" referencedColumnNames="id"
                baseTableSchemaName="habit_tracker_schema"
                referencedTableSchemaName="habit_tracker_schema"
                constraintName="fk_habit_user"/>
    </changeSet>

    <changeSet id="4" author="ulan">
        <createTable tableName="execution_record" schemaName="habit_tracker_schema">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="habit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="is_done" type="BOOLEAN" defaultValue="false"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="execution_record" baseColumnNames="habit_id"
                referencedTableName="habit" referencedColumnNames="id"
                baseTableSchemaName="habit_tracker_schema"
                referencedTableSchemaName="habit_tracker_schema"
                constraintName="fk_execution_habit"/>

        <createIndex indexName="unique_habit_date" tableName="execution_record" schemaName="habit_tracker_schema" unique="true">
            <column name="habit_id"/>
            <column name="date"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
